<resources>

    <style name="MainActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/background_window</item>
        <item name="android:actionModeBackground">@color/background_action_mode</item>
        <item name="android:statusBarColor">@color/background_status_bar</item>
    </style>

    <style name="TypeBlockBulletStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@drawable/shape_bullet</item>
    </style>

    <style name="TypeBlockQuoteStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/text_primary</item>
    </style>

    <style name="TypeBlockTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center|start</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="TypeTitleStyle" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:hint">@string/hint_title</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:requiresFadingEdge">horizontal</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="BaseImageButtonStyle" parent="BaseImageButtonStyle">
        <item name="android:scaleType">center</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="BoldImageButtonStyle" parent="BaseImageButtonStyle">
        <item name="android:src">@drawable/ic_bold_default</item>
    </style>

    <style name="ItalicImageButtonStyle" parent="BaseImageButtonStyle">
        <item name="android:src">@drawable/ic_italic_default</item>
    </style>

    <style name="UnderlineImageButtonStyle" parent="BaseImageButtonStyle">
        <item name="android:src">@drawable/ic_underline_default</item>
    </style>

    <style name="StrikethroughImageButtonStyle" parent="BaseImageButtonStyle">
        <item name="android:src">@drawable/ic_strikethrough_default</item>
    </style>

    <style name="LinkImageButtonStyle" parent="BaseImageButtonStyle">
        <item name="android:src">@drawable/ic_link_default</item>
    </style>

    <style name="BulletImageButtonStyle" parent="BaseImageButtonStyle">
        <item name="android:src">@drawable/ic_bullet_default</item>
    </style>

    <style name="QuoteImageButtonStyle" parent="BaseImageButtonStyle">
        <item name="android:src">@drawable/ic_quote_default</item>
    </style>

    <style name="AttachmentImageButtonStyle" parent="BaseImageButtonStyle">
        <item name="android:src">@drawable/ic_attachment</item>
    </style>

    <style name="DotsImageButtonStyle" parent="BaseImageButtonStyle">
        <item name="android:src">@drawable/ic_dots</item>
    </style>

    <style name="PlayImageButtonStyle" parent="BaseImageButtonStyle">
        <item name="android:src">@drawable/ic_play</item>
    </style>

</resources>
