<resources>

    <style name="MainActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="TypeBlockBulletStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@drawable/shape_bullet</item>
    </style>

    <style name="TypeBlockQuoteStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/text_primary</item>
    </style>

    <style name="TypeBlockTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center|start</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="TypeTitleStyle" parent="Widget.AppCompat.EditText">
        <item name="android:hint">@string/hint_title</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:requiresFadingEdge">horizontal</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="BulletImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:src">@drawable/ic_action_bullet</item>
        <item name="android:scaleType">center</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="QuoteImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:src">@drawable/ic_action_quote</item>
        <item name="android:scaleType">center</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="ImageImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:src">@drawable/ic_action_image</item>
        <item name="android:scaleType">center</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="RightImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:src">@drawable/ic_action_right</item>
        <item name="android:scaleType">center</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

</resources>
